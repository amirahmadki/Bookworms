<div class="card card-body">
  <h3>Edit Book Info</h3>
  <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
    <div class="form-group">
      <input type="hidden" name="_method" value="PUT">
      <label for="title">Title</label>
      <input type="text" class="form-control" name="title" value="{{idea.title}}" required>
    </div>
    <div class="form-group">
      <label for="title">Number of Pages</label>
      <input type="number" class="form-control" name="pages" value={{idea.pages}} required>
    </div>

    <div class="form-group">
      <label for="details">Details</label>
      <textarea type="text" class="form-control" rows="10" name="details" required>{{idea.details}}</textarea>
    </div>
    <button class="btn btn-primary">Submit</button>
  </form>
</div>